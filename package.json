{
  "name": "myapp",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "client": "cd ./client; yarn",
    "dev": "DEBUG=myapp:* PORT=8080 nodemon ./bin/www",
    "test": "jest",
    "start": "node ./bin/www"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "client"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 80,
    "overrides": [
      {
        "files": "*.scss",
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "hbs": "~4.0.4",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "node-sass-middleware": "0.11.0"
  },
  "devDependencies": {
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1"
  }
}
